<%= flash[:notice] %>

<div class="col-md-6 col-md-offset-3">
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= @user.errors.count %>件のerrorが発生しました。</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1>User info</h1>

  <%= form_for(@user) do |f| %>
    <div class="field row">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "col-xs-12 book_title" %>
    </div>

    <div class="field row">
      <%= f.label :profile_image, "Image" %>
      <%= f.attachment_field :profile_image, class: "col-xs-12 book_body" %>
    </div>
    <div class="field row">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, autofocus: true, class: "col-xs-12 book_body" %>
    </div>
    <br>
    <div class="actions row">
      <p><%= f.submit "Update User", class: "btn btn-primary col-xs-12" %></p>
    </div>
  <% end %>
</div>